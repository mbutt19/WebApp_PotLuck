@{
    ViewData["Title"] = "Home Page";
}
@section AddToHead{
    <link rel="stylesheet" href="~/css/HomeStyle.css" />
}

<style>
    .s3 input, #country, #city, #state {
        text-align: center;
        border-bottom: none;
    }
    menuBtn {
        margin-top: 0;
    }
    #background-image {
        position: absolute;
        left: 0;
        right: 0;
        min-height: 90vh;
        z-index: -1;
        filter: opacity(20%);
        background-image: url("../images/Home/table.jpeg");
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 0 0 50% 50%;
    }
    #coupon-section {
        display: block;
        text-align: center;
        padding: 30vh 0;
        margin-bottom: 40vh;
        margin-top:0;
    }
        #coupon-section p.subtitle {
            display: inline-block;
            width: 50vw;
            line-height: 2rem;
            font-style: italic;
        }
    #coupon-text {
        padding: var(--main-padding);
    }
        #coupon-text > h1 {
            color: #F42E56;
            padding-top: 2vh;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }
</style>

<div class="container">
    <div class="row" id="fpImpression">
        <div class="col s6">
