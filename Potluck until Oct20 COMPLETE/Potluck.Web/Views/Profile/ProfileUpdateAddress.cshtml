@model Potluck.Web.Models.AddressDTO

@{
    ViewData["Title"] = "ProfileAddAddress";
}

<style>
    .btns {
        margin-top: 3vh;
    }
</style>
<div class="row container">
    <h3 style="font-size:3rem;font-family:Arial, Helvetica, sans-serif;font-weight:bold;font-size:2.85rem;margin:70px 0 50px 0;padding-left:3vw;" class="center Radical-Red-Text">Update Address</h3>
    <div class="card-panel z-depth-5 ">
        <div class="col-md-4">
            <form asp-controller="Profile" asp-action="UpdateAddress">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="addressId" />
                <div class="form-group">
                    <label asp-for="addressName" class="control-label">Address Title:</label>
                    <input asp-for="addressName" class="form-control" required />
                    <span asp-validation-for="addressName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="addressLine1" class="control-label">Address Line 1:</label>
                    <input asp-for="addressLine1" class="form-control" required />
                    <span asp-validation-for="addressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="addressLine2" class="control-label">Address Line 2:</label>
                    <input asp-for="addressLine2" class="form-control" />
                    <span asp-validation-for="addressLine2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city" class="control-label">City:</label>
                    <input asp-for="city" class="form-control" required />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="postalCode" class="control-label">Postal Code:</label>
                    <input asp-for="postalCode" class="form-control" required />
                    <span asp-validation-for="postalCode" class="text-danger"></span>
                </div>
                <div class="form-group center">
                    <label asp-for="mainAddress" style="margin-right:3vw;">Primary Address:</label>
                    <label>
                        @if (!Model.mainAddress)
                        {
                            <input asp-for="mainAddress" type="checkbox" class="blue" />
                        }
                        else
                        {
                            <input asp-for="mainAddress" type="checkbox" checked class="red" />
                        }
                        <span></span>
                    </label>
                </div>
                <div class="form-group container center btns">
                    <input type="submit" value="Update" class="btn btn-default Radical-Red" />
                    <a class="btn btn-default Radical-Red" asp-action="ShowAddressManager">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>



