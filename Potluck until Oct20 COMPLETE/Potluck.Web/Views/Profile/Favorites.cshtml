@model Potluck.Web.Models.PageOfItems

@{
    ViewData["Title"] = "Favorites";
}

<style>
    .hoverable {
        min-height: 63vh;
        max-height: 63vh;
        border: 4px solid #F42E56;
    }
    .pix {
        min-height: 28.5vh;
        max-height: 28.5vh;
    }
    .deets {
        min-height: 34.5vh;
        max-height: 34.5vh;
    }
    p{
        padding-top:1.5vh;
        padding-bottom:1.5vh;
        margin-right:0;
        padding-right:0;
    }
</style>
<h3 class="center" style="font-family:Arial, Helvetica, sans-serif;font-weight:bold;font-size:2.5rem;margin:30px 0 30px 0;padding-left:3vw;color: #F42E56;">Favorites</h3>
@if (Model.content != null && Model.content.Count != 0)
{
<div class="row" style="margin-bottom:20vh;">
    @foreach (var item in Model.content)
    {
        @if (item.enable)
        {
            <div class="col s3 card-panel itemCard z-depth-5 hoverable" style=" margin-left: 5vw;">

                <a asp-controller="BuyerItem" asp-action="ShowItemDetails" asp-route-itemId="@item.itemId">
                    <div class="row center-align pix">
                        <!--Image-->
                        @if (item.imageUrl == null)
                        {
                            <div class="col s12">
                                <img src="~/images/no-camera.png" style="height:28vh;max-width:100%;min-width:100%;max-height:25vh;border-top-left-radius:18px;border-top-right-radius:18px;zoom:1.5;overflow:hidden;" />

                                <a asp-controller="Profile" asp-action="RemoveFavorite" asp-route-itemId="@item.itemId">
                                    <i class="mall material-icons right Radical-Red white-text" style="cursor: pointer;padding:0;">clear</i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="s12">
                                <img src="@item.imageUrl" style="height:80%;width:80%;margin:auto;max-width:90%;max-height:18vh;margin:1vh 0;zoom:1.68;overflow:hidden;margin-bottom:1.7vh;padding:0" />
                                <a asp-controller="Profile" asp-action="RemoveFavorite" asp-route-itemId="@item.itemId">
                                    <i class="mall material-icons right Radical-Red white-text" style="cursor: pointer;">clear</i>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="row deets">
                        <div class="col s12">
                            <div class="row" style="color:black;padding-left:7px;margin-top:.5vh;">
                                <!--Name-->
                                <h6 style="font-weight:500;font-size:large;margin-top:0;margin-bottom:0;" class="center Radical-Red-Text">@item.name</h6>
                                <!--Description-->
                                <p class="grey-text lighten-3 center" style="font-size:small;margin-top:0;">@item.description</p>
                                <div class="right-aligned col s7 grey-text text-accent-1">@await Html.PartialAsync("MiniProfile", item.user)</div>
                                <div class="col s1">&nbsp;</div>
                                <!--Price-->
                                <p class="Radical-Red-Text left col s3" style="padding:0;"><b>$@Html.DisplayFor(modelItem => item.price)</b></p>
                                <div class="col s1">&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>
}
else
{
    <div class="row" style="margin-bottom:20vh;">
        <h3 class="Radical-Red-Text">You Currently Do Not Have Any Favorites</h3>
    </div>
}
<div class="col s12 center">
    @if (Model.first && Model.last)
    {
        <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons Radical-Red-Text">chevron_left</i></a></li>
            <li class="active"><a asp-action="ShowFavorites" asp-route-page="0">1</a></li>
            <li class="disabled"><a href="#!"><i class="material-icons Radical-Red-Text">chevron_right</i></a></li>
        </ul>
    }
    else if (Model.first)
    {
        <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons Radical-Red-Text">chevron_left</i></a></li>
            @for (int i = 0; i < Model.totalPages; i++)
            {
                @if (i == Model.pageable.pageNumber)
                {
                    <li class="active"><b><a class="white red-text" asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></b></li>
                }
                else
                {
                    <li class="active"><a asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></li>
                }
            }
            <li class="active"><a asp-action="ShowFavorites" asp-route-page="@(Model.pageable.pageNumber+1)"><i class="material-icons">chevron_right</i></a></li>
        </ul>
    }
    else if (Model.last)
    {
        <ul class="pagination">
            <li class="active"><a asp-action="ShowFavorites" asp-route-page="@(Model.pageable.pageNumber-1)"><i class="material-icons">chevron_left</i></a></li>
            @for (int i = 0; i < Model.totalPages; i++)
            {
                @if (i == Model.pageable.pageNumber)
                {
                    <li class="active"><b><a class="white red-text" asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></b></li>
                }
                else
                {
                    <li class="active"><a asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></li>
                }
            }
            <li class="disabled"><a href="#!"><i class="material-icons Radical-Red-Text">chevron_right</i></a></li>
        </ul>
    }
    else if (!Model.first && !Model.last)
    {
        <ul class="pagination">
            <li class="active"><a asp-action="ShowFavorites" asp-route-page="@(Model.pageable.pageNumber-1)"><i class="material-icons">chevron_left</i></a></li>
            @for (int i = 0; i < Model.totalPages; i++)
            {
                @if (i == Model.pageable.pageNumber)
                {
                    <li class="active"><b><a class="white red-text" asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></b></li>
                }
                else
                {
                    <li class="active"><a asp-action="ShowFavorites" asp-route-page="@i">@(i+1)</a></li>
                }
            }
            <li class="active"><a asp-action="ShowFavorites" asp-route-page="@(Model.pageable.pageNumber+1)"><i class="material-icons">chevron_right</i></a></li>
        </ul>
    }
</div>

