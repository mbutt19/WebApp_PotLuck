@model Potluck.Web.Models.OrderDTO


<div class="row">
    <script src="https://www.paypal.com/sdk/js?client-id=AW5C5FNqWN7DsD0nEZJ3FGkdNmoA74GF4h15rNBa9NZ_zdBgzL2Vkr_tMp2AGfwP833mhdRMejQ-QZLX&currency=CAD"></script>

    <div id="paypal-button-container"></div>

    <script>
        paypal.Buttons({
            createOrder: function (data, actions) {
                return actions.order.create({
                    application_context: {
                        brand_name: "PotLuck!"
                    },
                    purchase_units: [{
                        amount: {
                            value: '@Model.total',
                            details: {
                                subtotal: '@Model.subTotal',
                                service_fees: '@Model.serviceFee',
                                tax: '@Model.tax'
                            }
                        }
                    }]
                });
            },
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    alert('Transaction completed by ' + details.payer.name.given_name);
                });
            }
        }).render('#paypal-button-container'); // Display payment options on your web page
    </script>
</div>
