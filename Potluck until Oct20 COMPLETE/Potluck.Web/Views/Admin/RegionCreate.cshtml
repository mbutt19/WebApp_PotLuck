@model Potluck.Web.Models.StateCountry

@{
    ViewData["Title"] = "RegionCreate";
}

<style>
    .container {
        width: 80vw;
        margin: 1vh auto;
        border: 3px solid #F42E56;
    }
    .btn-primary {
        margin: 1vh 1vw;
    }
</style>

<h2 class="Radical-Red-Text center">Region Create</h2>
<div class="container card-panel">
    <div class="col-md-4">
        <form asp-action="CreateRegion">
            <input hidden asp-for="stateCountryId" value="0" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="country" class="control-label"></label>
                <input readonly required asp-for="country" class="form-control" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>
            @* This is a string it is the regions name *@
            <div class="form-group">
                <label asp-for="stateProvince" class="control-label"></label>
                <input required asp-for="stateProvince" class="form-control" />
                <span asp-validation-for="stateProvince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deliveryFee" class="control-label"></label>
                <input required asp-for="deliveryFee" class="form-control" />
                <span asp-validation-for="deliveryFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="serviceFee" class="control-label"></label>
                <input required asp-for="serviceFee" class="form-control" />
                <span asp-validation-for="serviceFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tax" class="control-label"></label>
                <input required asp-for="tax" class="form-control" />
                <span asp-validation-for="tax" class="text-danger"></span>
            </div>
            <div class="form-group row center">
                <input type="submit" value="Create" class="btn btn-primary Radical-Red white-text" />
                <a class="btn btn-primary Radical-Red white-text" asp-action="ShowRegionConfig">Back to List</a>
            </div>
        </form>
    </div>
</div>

